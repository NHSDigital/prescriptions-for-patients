<AssignMessage name="AssignMessage.AddDelegationHeaders">
  <Add>
    <Headers>
      <Header name="X-NHSD-Delegated-Access">{nhsd.delegation.enabled}</Header> <!-- Only enable this header for opt-in -->
      <Header name="X-NHSD-Subject-NHS-Number">{nhsd.subject.nhs_number}</Header> <!-- Do not enable -->
